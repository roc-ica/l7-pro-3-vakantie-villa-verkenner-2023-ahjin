{
    "name": "villaverkenner/admin-panel",
    "description": "Villa Verkenner Admin Panel and Management System",
    "type": "project",
    "require": {
        "php": "^8.0",
        "ext-mysqli": "*",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "monolog/monolog": "^2.5",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "VillaVerkenner\\": "./"
        }
    },
    "scripts": {
        "test": "phpunit tests/",
        "lint": "phpcs",
        "fix": "phpcbf"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    }
}
